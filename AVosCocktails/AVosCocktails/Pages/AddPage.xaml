<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AVosCocktails.Pages.AddPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        
        <StackLayout Margin="20,35,20,20">
            <Entry x:Name="nameEntry"
               Placeholder="Enter name" />
            <Entry x:Name="instructionsEntry"
               Placeholder="Enter instructions" />


            <Picker x:Name="picker" Title="--select image mode--" VerticalOptions="Center" PropertyChanged="picker_PropertyChanged"/>
            <Entry x:Name="imageEntry"
               Placeholder="Enter image url"
                   IsVisible="false"
                   PropertyChanged="imageEntry_PropertyChanged"/>
            <Button x:Name="imageEntryGalery" Text="Select Image" Clicked="SelectImage" IsVisible="true" />
            <Image x:Name="selectedImage" HeightRequest="150"/>

            <Entry x:Name="ingredientsEntry"
               Placeholder="Enter ingredients" />
            <Entry x:Name="tagsEntry"
               Placeholder="Enter tags" />
            <Button Text="Add Coktail"
                Clicked="OnButtonClicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>